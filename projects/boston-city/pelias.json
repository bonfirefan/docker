{
  "logger": {
    "level": "info",
    "timestamp": false
  },
  "esclient": {
    "apiVersion": "5.6",
    "hosts": [
      { "host": "elasticsearch" }
    ]
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "1"
      }
    }
  },
  "acceptance-tests": {
    "endpoints": {
      "docker": "http://api:4000/v1/"
    }
  },
  "api": {
    "textAnalyzer": "libpostal",
    "services": {
      "pip": { "url": "http://pip:4200" },
      "libpostal": { "url": "http://libpostal:4400" },
      "placeholder": { "url": "http://placeholder:4100" },
      "interpolation": { "url": "http://interpolation:4300" }
    },
    "defaultParameters": {
      "focus.point.lat": 42.32,
      "focus.point.lon": -71.09
    }
  },
  "imports": {
    "adminLookup": {
      "enabled": true
    },
    "geonames": {
      "datapath": "/data/geonames",
      "countryCode": "ALL"
    },
    "openstreetmap": {
      "download": [
        { "sourceURL": "https://s3.amazonaws.com/metro-extracts.nextzen.org/boston_massachusetts.osm.pbf" }
      ],
      "leveldbpath": "/tmp",
      "datapath": "/data/openstreetmap",
      "import": [{
        "filename": "boston_massachusetts.osm.pbf"
      }]
    },
    "openaddresses": {
      "datapath": "/data/openaddresses",
      "files": [
        "us/ma/city_of_boston.csv",
      ]
    },
    "polyline": {
      "datapath": "/data/polylines",
      "files": [ "extract.0sv" ]
    },
    "whosonfirst": {
      "datapath": "/data/whosonfirst",
      "importVenues": false,
      "importPostalcodes": true,
      "importPlace": [
        "85950361"
      ]
    },
    "transit": {
      "datapath": "/data/transit",
      "feeds": [
        {
          "layerId": "bikeshare",
          "url": "https://member.bluebikes.com/data/stations.json",
          "filename": "stations.json",
          "agencyId": "bluebikes-boston",
          "agencyName": "BluebikesBoston",
          "layerName": "Bluebikes"
        },
        {
          "layerId": "stops",
          "url": "https://cdn.mbta.com/MBTA_GTFS.zip",
          "filename": "stops.txt",
          "agencyId": "MBTA",
          "agencyName": "MBTA",
          "layerName": "Stop"
        }
       ]
      },
    "interpolation": {
      "download": {
        "tiger": {
          "datapath": "/data/tiger",
          "states": [
            { "state_code": 25, "county_code": 25, "name": "Boston city, MA" }
          ]
        }
      }
    }
  }
}
